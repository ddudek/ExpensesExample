<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>

        <item name="buttonStyle">@android:style/Widget.Material.Light.Button.Borderless.Colored</item>
        <item name="imageButtonStyle">@android:style/Widget.Material.Light.ImageButton</item>
    </style>

    <style name="editButtonStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="commentTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="commentLabelStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dateLabelStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="merchantTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dividerStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="emailStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="userNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
